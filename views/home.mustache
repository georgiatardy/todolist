<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <header>
    <h1>My List</h1>
  </header>


  <section>

    <form id="input" action="/" method="post">
      <input class="input" type="text" name="item" placeholder="Enter Task Here" value="">
      <input class="button" type="submit" name="" value="Add Task">
    </form>


    <ul id: "todo">
      {{#todolist}}
        <li>
          <form class="todo" action="/{{id}}" method="post">
            <input type="submit" value="check" />
            <span>{{text}}</span>
          </form>
        </li>
      {{/todolist}}
    </ul>

    <ul id="done">
      {{#complete}}
        <li>{{text}}</li>
      {{/complete}}

    </ul>

  </section>

</body>

</html>
