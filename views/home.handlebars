<html>

<head>
  <meta charset="utf-8">
  <title>Daily Task List</title>
  <link rel="stylesheet" href="styles.css">
</head>

<body>

  <h1>Tasks To Complete</h1>
<article class="log">
  <ul>
    {{#taskList}}
      <li><a href="/del/{{@index}}"><button type="button" name="button">Mark Complete</button></a> {{.}}</li>
    {{/taskList}}
  </ul>
</article>


 <form action="/enterTodo" method="post">
    <br>
    <div><input type="text" value="{{taskField.todo}}" name="todo" placeholder="Enter Task" /></div>
    <br>
   <button>Completed!</button>
  </form>
<div>
<ul>
  {{#completeList}}
    <li>{{.}}</li>
  {{/completeList}}
</ul>
</div>

</body>

</html>
